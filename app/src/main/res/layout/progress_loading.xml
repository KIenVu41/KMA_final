<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/define_dimen_10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/define_dimen_15">

        <TextView
            android:id="@+id/title_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:paddingBottom="@dimen/define_dimen_10"
            android:text="@string/TEXT_DOWNLOADING"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <com.pnikosis.materialishprogress.ProgressWheel
            android:layout_width="@dimen/define_dimen_34"
            android:layout_height="@dimen/define_dimen_34"
            wheel:matProg_barColor="#5588FF"
            wheel:matProg_progressIndeterminate="true" />
    </LinearLayout>

</LinearLayout>